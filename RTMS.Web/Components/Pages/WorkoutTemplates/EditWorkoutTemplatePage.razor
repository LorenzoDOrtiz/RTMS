@page "/workouts/edit-workout-template/{Id:int}"
@attribute [Authorize]
@inject IViewWorkoutTemplateByIdUseCase ViewWorkoutTemplateUseCase
@inject NavigationManager NavigationManager

<PageTitle>Edit Workout</PageTitle>

<EditWorkoutTemplate WorkoutTemplate="workoutTemplate" />

@code {
    [Parameter]
    public int Id { get; set; }

    private WorkoutTemplate? workoutTemplate;

    protected override async Task OnParametersSetAsync()
    {
        workoutTemplate = await ViewWorkoutTemplateUseCase.ExecuteAsync(Id);
    }
}