@inject WorkoutTimerService WorkoutTimerService


<div style="display: inline-flex; justify-content:center; padding: 6px 16px; border-radius: 4px; border: 1px solid #0288d1; box-shadow: 0px 3px 1px -2px rgba(0,0,0,.2),0px 2px 2px 0px rgba(0,0,0,.14),0px 1px 5px 0px rgba(0,0,0,.12); margin-left: 4px;">
    <MudIcon Icon="@Icons.Material.Filled.AccessTimeFilled" Size="Size.Small" />
    <MudText Typo="Typo.subtitle2" Class="ml-2">@WorkoutTimerService.ElapsedTime.ToString(@"hh\:mm\:ss")</MudText>
</div>


@code {
    protected override void OnInitialized()
    {
        WorkoutTimerService.OnTimerChanged += TimerChangedHandler;
    }

    private void TimerChangedHandler()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        WorkoutTimerService.OnTimerChanged -= TimerChangedHandler;
    }
}
