<MudCard>
    <MudCardContent>
        <MudTextField Value="WorkoutName"
                      ValueChanged="OnWorkoutNameChanged"
                      Label="Workout Name"
                      Variant="Variant.Filled"
                      Margin="Margin.Dense" 
                      Required
                      Clearable="true"
                      AutoFocus />
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    public string WorkoutName { get; set; }

    [Parameter]
    public EventCallback<string> OnWorkoutNameChanged { get; set; }
}
