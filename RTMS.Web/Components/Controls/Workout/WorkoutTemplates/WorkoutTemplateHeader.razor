    <CardHeaderContent>
        <MudTextField Value="WorkoutName"
                      ValueChanged="OnWorkoutNameChange"
                      Label="Workout Name"
                      Variant="Variant.Filled"
                      Margin="Margin.Dense"
                      AutoFocus />
    </CardHeaderContent>
</MudCardHeader>

@code {
    [Parameter]
    public string WorkoutName { get; set; }

    [Parameter]
    public EventCallback<string> OnWorkoutNameChange { get; set; }
