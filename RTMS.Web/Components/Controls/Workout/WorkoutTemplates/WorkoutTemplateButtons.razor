<MudGrid>
    <MudItem>
        @if (Exercises.Any())
        {
            <MudButton Variant="Variant.Filled"
                       Color="Color.Success"
                       OnClick="Save"
                       Class="mr-4"
                       Disabled="IsSaveDisabled">
                Save Workout
            </MudButton>
        }
        <MudButton Href="/workouts"
                   Variant="Variant.Text"
                   Color="Color.Error">
                   Cancel
        </MudButton>
    </MudItem>
    <MudItem Class="ml-auto">
        <MudButton Variant="Variant.Filled"
                   Color="Color.Info"
                   OnClick="AddExercise">
                   Add Exercise
        </MudButton>
    </MudItem>
</MudGrid>

@code {
    [Parameter]
    public List<ExerciseTemplateViewModel> Exercises { get; set; }

    [Parameter]
    public bool IsSaveDisabled { get; set; }

    [Parameter]
    public EventCallback OnSave { get; set; }

    [Parameter]

    public EventCallback OnExerciseAdded { get; set; }

    private void Save()
    {
        OnSave.InvokeAsync();
    }

    private void AddExercise()
    {
        OnExerciseAdded.InvokeAsync();
    }
}
