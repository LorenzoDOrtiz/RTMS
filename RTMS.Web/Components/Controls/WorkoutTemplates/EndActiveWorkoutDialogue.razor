<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">You already have a workout in progress. Do you want to end the workout and start a new one?</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="EndActiveWorkout">Yes</MudButton>
        <MudButton Color="Color.Secondary" OnClick="CancelDialog">No</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance EndActiveWorkoutDialog { get; set; }

    private void EndActiveWorkout() => EndActiveWorkoutDialog.Close(DialogResult.Ok(true));

    private void CancelDialog() => EndActiveWorkoutDialog.Cancel();
}
